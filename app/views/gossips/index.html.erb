<h1>Gossips#index</h1>
<p>Find me in app/views/gossips/index.html.erb</p>

<div class="mb-4">
  <h1>Bienvenue sur The Big Project</h1>
  <p class="text-muted">Les derniers potins publiés :</p>
</div>

<div class="row">
  <% @gossips.each do |gossip| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= gossip.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">par <%= gossip.user.first_name %></h6>
          <p class="card-text"><%= truncate(gossip.content, length: 100) %></p>
          <div class="mt-auto">
            <%= link_to "Voir plus", gossip_path(gossip), class: "btn btn-primary" %>
          </div>
        </div>
        <div class="card-footer text-muted small">
          Publié le <%= gossip.created_at.strftime("%d %b %Y") %>
        </div>
      </div>
    </div>
  <% end %>
</div>
